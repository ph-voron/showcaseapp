<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_card_view"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/interval_4"
            android:paddingBottom="@dimen/interval_4"
            android:paddingStart="@dimen/interval_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentStart="true"
                android:text="@string/cart_list_total_cost"
                android:textAppearance="@style/TextLabelHeader2"
                android:layout_width="@dimen/cart_product_item_height"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_cost"
                android:layout_marginStart="@dimen/interval_1"
                android:layout_alignParentStart="true"
                android:text=""
                android:textAppearance="@style/TextLabelHeader2"
                android:textColor="@color/colorBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>